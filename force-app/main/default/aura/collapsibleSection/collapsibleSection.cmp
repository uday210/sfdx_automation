<aura:component description="collapsibleSection">
    <aura:attribute name="title" type="String"/>
    <aura:attribute name="open" type="Boolean" default="true"/>
    <aura:attribute name="animate" type="Boolean" default="false"/>
    <aura:attribute name="variant" type="String" default="" description="Options: link"/>
    <aura:attribute name="isAnimating" type="Boolean"/>

    <aura:handler name="render" value="{!this}" action="{!c.onRender}"/>

    <div class="{!'container ' + v.variant}">
        <div class="{!v.variant + ' row'}" onclick="{!c.toggle}">
            <div class="{!v.variant + ' rowIcon '+(v.open?'opened ':'closed ')+(v.animate?'animate ':'')}">
                <lightning:icon class="variant" iconName="utility:chevronright"/>
            </div>
            <div class="{!'rowTitle ' + v.variant}">
                {!v.title}
            </div>
        </div>
        <div class="transitionHeight" aura:id="transitionHeight">
            <div class="contentContainer" aura:id="contentContainer">
                {!v.body}
            </div>
        </div>
    </div>
</aura:component>