<aura:component description="DemoEmpAPi" implements="flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId" access="global" >
	<!-- reffer empApi  component-->
    <lightning:empApi aura:id="empApi" />
    <!--initialize attribute to store the received event data-->
    <aura:attribute name="receivedData" type="object"/>
    <!-- initialize handler which invokes on component render-->
    <aura:handler name="init" value="{!this}" action="{!c.onInit}"/>
     <lightning:card footer="" title="Data from platform event">
      
        <p class="slds-p-horizontal_small">
           {!v.receivedData}
        </p>
    </lightning:card>
 
</aura:component>